{
  "name": "@workspace/connector-dutchie",
  "version": "0.0.0",
  "private": true,
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./config": {
      "types": "./dist/src/config.d.ts",
      "default": "./dist/src/config.js"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "default": "./dist/src/client.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "pnpm run test:build && pnpm run test:rt",
    "test:build": "rm -rf .temp-test && tsc -p tsconfig.test.json",
    "test:rt": "node ./node_modules/jest/bin/jest.js --runInBand --passWithNoTests --rootDir .temp-test --testRegex '(.*)(test|spec).js$'",
    "test:integration": "jest --config jest.integration.cjs",
    "generate:types": "openapi-ts -i ./schemas/files/dutchie-openapi.json -o ./src/generated"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@connector-factory/core": "^0.1.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "0.84.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.12",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "ts-patch": "^3.3.0",
    "typescript": "^5.6.3",
    "typia": "^9.6.1"
  }
}

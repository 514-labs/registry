{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Google Analytics Data API v1beta - OrderBy Type",
  "description": "Specifies the ordering of rows in report response",
  "type": "object",
  "properties": {
    "desc": {
      "type": "boolean",
      "description": "If true, sorts by descending order"
    },
    "metric": {
      "type": "object",
      "description": "Sorts results by a metric's values",
      "properties": {
        "metricName": { "type": "string" }
      },
      "required": ["metricName"]
    },
    "dimension": {
      "type": "object",
      "description": "Sorts results by a dimension's values",
      "properties": {
        "dimensionName": { "type": "string" },
        "orderType": {
          "type": "string",
          "enum": [
            "ORDER_TYPE_UNSPECIFIED",
            "ALPHANUMERIC",
            "CASE_INSENSITIVE_ALPHANUMERIC",
            "NUMERIC"
          ]
        }
      },
      "required": ["dimensionName"]
    },
    "pivot": {
      "type": "object",
      "description": "Sorts results by a metric's values within a pivot column group",
      "properties": {
        "metricName": { "type": "string" },
        "pivotSelections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dimensionName": { "type": "string" },
              "dimensionValue": { "type": "string" }
            }
          }
        }
      },
      "required": ["metricName", "pivotSelections"]
    }
  },
  "oneOf": [
    { "required": ["metric"] },
    { "required": ["dimension"] },
    { "required": ["pivot"] }
  ],
  "metadata": {
    "apiType": "type",
    "description": "Defines ordering for report results"
  }
}

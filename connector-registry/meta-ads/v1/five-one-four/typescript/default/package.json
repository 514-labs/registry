{
  "name": "@workspace/connector-meta-ads",
  "version": "0.1.0",
  "private": true,
  "description": "Self-contained TypeScript Meta Ads connector using Facebook Graph API",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./config": {
      "types": "./dist/src/config.d.ts",
      "default": "./dist/src/config.js"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "default": "./dist/src/client.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.cjs"
  },
  "dependencies": {
    "@connector-factory/core": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.12",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "ts-jest": "29.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  }
}

{
  "name": "@workspace/schema-tools",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "schema-codegen": "./dist/bin/codegen.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"

    "glob": "^10.4.5",
    "json-schema-to-typescript": "^15.0.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  }
}

{
  "$schema": "https://schemas.connector-factory.dev/scaffold.schema.json",
  "scaffold": "meta",
  "version": "0.6.0",
  "description": "Scaffold connector root _meta (connector-level metadata) and provider _meta (author-level metadata).",
  "variables": {
    "connector": {
      "description": "Connector name (kebab-case).",
      "example": "stripe",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "author": {
      "description": "Organization or author handle (kebab-case).",
      "example": "fiveonefour",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    }
  },
  "structure": [
    {
      "type": "dir",
      "name": "{connector}",
      "children": [
        {
          "type": "dir",
          "name": "_meta",
          "children": [
            { "type": "file", "name": "README.md", "template": "# {connector} (connector root)\n\nShared, provider-agnostic docs and assets for `{connector}`.\n" },
            { "type": "file", "name": "connector.json", "template": "{\n  \"$schema\": \"https://schemas.connector-factory.dev/connector-root.schema.json\",\n  \"name\": \"{connector}\",\n  \"title\": \"{connector}\",\n  \"version\": \"0.1.0\",\n  \"category\": \"api|db|stream\",\n  \"tags\": [],\n  \"description\": \"\",\n  \"homepage\": \"\"\n}\n" },
            { "type": "dir", "name": "assets" }
          ]
        },
        {
          "type": "dir",
          "name": "{author}",
          "children": [
            {
              "type": "dir",
              "name": "_meta",
              "children": [
                { "type": "file", "name": "README.md", "template": "# {connector}\n\n> Maintained by {author}\n\n" },
                { "type": "file", "name": "CHANGELOG.md", "template": "# Changelog\n\nAll notable changes to `{connector}` by `{author}`.\n\n" },
                { "type": "file", "name": "LICENSE", "template": "MIT\n" },
                { "type": "file", "name": "connector.json", "template": "{\n  \"$schema\": \"https://schemas.connector-factory.dev/connector-provider.schema.json\",\n  \"name\": \"{connector}\",\n  \"author\": \"{author}\",\n  \"version\": \"0.1.0\",\n  \"languages\": [],\n  \"tags\": [],\n  \"category\": \"api|db|stream\",\n  \"description\": \"\",\n  \"homepage\": \"\",\n  \"license\": \"MIT\",\n  \"source\": {\"type\":\"api\",\"spec\":\"\"},\n  \"capabilities\": {\"extract\": true, \"transform\": true, \"load\": true},\n  \"maintainers\": []\n}\n" },
                { "type": "dir", "name": "assets" }
              ]
            },
            { "type": "dir", "name": "python" },
            { "type": "dir", "name": "typescript" }
          ]
        }
      ]
    }
  ]
}
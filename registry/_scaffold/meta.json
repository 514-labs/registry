{
  "$schema": "https://schemas.connector-factory.dev/scaffold.schema.json",
  "scaffold": "meta",
  "version": "0.6.0",
  "description": "Scaffold connector root _meta (connector-level metadata) and provider _meta (author-level metadata).",
  "variables": {
    "connector": {
      "description": "Connector name (kebab-case).",
      "example": "stripe",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "version": {
      "description": "Source version identifier (not necessarily semver). Examples: v4, ga4, 2020-08-27, api-2020.08.27",
      "example": "v4",
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "author": {
      "description": "GitHub organization or user handle (kebab-case). Used for linking and avatars.",
      "example": "514-labs",
      "pattern": "^[a-z0-9](?:[a-z0-9-]{0,37}[a-z0-9])?$"
    }
  },
  "structure": [
    {
      "type": "dir",
      "name": "{connector}",
      "children": [
        {
          "type": "dir",
          "name": "_meta",
          "children": [
            {
              "type": "file",
              "name": "README.md",
              "template": "# {connector} (connector root)\n\nShared, provider-agnostic docs and assets for `{connector}`.\n"
            },
            {
              "type": "file",
              "name": "connector.json",
              "template": "{\n  \"$schema\": \"https://schemas.connector-factory.dev/connector-root.schema.json\",\n  \"name\": \"{connector}\",\n  \"title\": \"{connector}\",\n  \"category\": \"api|db|stream\",\n  \"tags\": [],\n  \"description\": \"\",\n  \"homepage\": \"\",\n  \"registryUrl\": \"https://github.com/514-labs/connector-factory/tree/main/registry/{connector}\"\n}\n"
            },
            { "type": "dir", "name": "assets" }
          ]
        },
        {
          "type": "dir",
          "name": "{version}",
          "children": [
            {
              "type": "dir",
              "name": "_meta",
              "children": [
                {
                  "type": "file",
                  "name": "README.md",
                  "template": "# {connector} {version}\n\nVersion-level metadata and assets for `{connector}`.\n"
                },
                {
                  "type": "file",
                  "name": "version.json",
                  "template": "{\n  \"name\": \"{connector}\",\n  \"version\": \"{version}\",\n  \"status\": \"experimental\",\n  \"releasedAt\": \"\",\n  \"notes\": \"\"\n}\n"
                },
                { "type": "dir", "name": "assets" }
              ]
            },
            {
              "type": "dir",
              "name": "{author}",
              "children": [
                {
                  "type": "dir",
                  "name": "_meta",
                  "children": [
                    {
                      "type": "file",
                      "name": "README.md",
                      "template": "# {connector}\n\n> Maintained by {author}\n\n"
                    },
                    {
                      "type": "file",
                      "name": "CHANGELOG.md",
                      "template": "# Changelog\n\nAll notable changes to `{connector}` by `{author}`.\n\n"
                    },
                    { "type": "file", "name": "LICENSE", "template": "MIT\n" },
                    {
                      "type": "file",
                      "name": "connector.json",
                      "template": "{\n  \"name\": \"{connector}\",\n  \"author\": \"{author}\",\n  \"authorType\": \"organization\",\n  \"avatarUrlOverride\": \"\",\n  \"version\": \"{version}\",\n  \"languages\": [],\n  \"tags\": [],\n  \"category\": \"api|db|stream\",\n  \"description\": \"\",\n  \"homepage\": \"\",\n  \"license\": \"MIT\",\n  \"source\": {\"type\":\"api\",\"spec\":\"\"},\n  \"capabilities\": {\"extract\": true, \"transform\": true, \"load\": true},\n  \"maintainers\": [],\n  \"issues\": {\n    \"typescript\": {\n      \"default\": \"\"\n    },\n    \"python\": {\n      \"default\": \"\"\n    }\n  },\n  \"registryUrl\": \"https://github.com/514-labs/connector-factory/tree/main/registry/{connector}/{version}/{author}\"\n}\n"
                    },
                    { "type": "dir", "name": "assets" }
                  ]
                },
                { "type": "dir", "name": "python" },
                { "type": "dir", "name": "typescript" }
              ]
            }
          ]
        }
      ]
    }
  ]
}
